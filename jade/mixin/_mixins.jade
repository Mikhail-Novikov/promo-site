
mixin projectsBlock(imageName)
	.swiper-slide
		a(href="#").projects__last-item
			.pli-t.posr
				p.projects__last-item-date
					|13.09.17
				img(src='img/projects/#{imageName}.png' alt='')
				.pli-overlay
					.dt
						.dtc.text-center ЧИТАТЬ ДАЛЬШЕ

			.projects__last-item-descr    
				h3 ПРОЕКТ "ТАНЦЫ" НА ТНТ
				p Аренда света и прокат светового оборудования

mixin projectsTourBlock(imageName)
	.projects__last-item
		p.projects__last-item-date
			|13.09.17
		img(src="img/projects/#{imageName}.png", alt="")
